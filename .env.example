# Audiobookshelf Configuration
ABS_URL=http://your-audiobookshelf:13378
ABS_TOKEN=your-api-token

# StoryGraph Configuration (Cookie-based authentication)
# To get your cookie:
# 1. Log in to https://app.thestorygraph.com in your browser
# 2. Open Developer Tools (F12 or right-click → Inspect)
# 3. Go to Application → Cookies → app.thestorygraph.com
# 4. Find 'remember_user_token' and copy its value
STORYGRAPH_COOKIE=your-remember-user-token-cookie-value
STORYGRAPH_USERNAME=your-username

# Hardcover Configuration
# Get your API key from https://hardcover.app/account
HARDCOVER_API_KEY=your-api-key

# Sync Settings
SYNC_INTERVAL_MINUTES=60
MIN_LISTEN_MINUTES=10
ENABLE_STORYGRAPH=true
ENABLE_HARDCOVER=true

# Application Settings
DATABASE_URL=sqlite:///data/audiobook-sync.db
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO
TZ=UTC
PORT=8765
